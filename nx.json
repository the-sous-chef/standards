{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "master",
  "release": {
    "projects": ["packages/*"],
    "projectsRelationship": "independent",
    "git": {
      "commit": true,
      "tag": true
    },
    "version": {
      "conventionalCommits": true,
      "generatorOptions": {
        "specifierSource": "conventional-commits"
      }
    },
    "changelog": {
      "projectChangelogs": true,
      "workspaceChangelog": {
        "createRelease": "github"
      }
    }
  }
}
